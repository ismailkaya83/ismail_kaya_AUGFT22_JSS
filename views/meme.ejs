<!DOCTYPE html>
<html lang="en">
<head>
    <title>Meme Overview Page</title>
    <!-- Include head partial -->
    <%- include('./partials/head.ejs') %>
</head>

<body class="position-relative" data-bs-spy="scroll">
<!-- Include navbar partial -->
<%- include('./partials/navbar.ejs', { user: user ? user : 'Guest', isAutheticated: isAuthenticated }) %>
<section class="container">
    <table class="table" id="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
            <th scope="col">Image</th>
        </tr>
        </thead>
        <% if (meme) { %>
        <tbody>
        <tr>
            <th scope="row"><%= meme.id %></th>
            <td><%= meme.name %></td>
            <td><%= meme.width + 'x' + meme.height %></td>
            <td>
                <img
                        class="resize"
                        height="<%= meme.height %>"
                        width="<%= meme.width %>"
                        src="<%= meme.url %>"
                        alt="Meme comic"
                />
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
</section>
<!-- Include scripts partial -->
<%- include('./partials/scripts.ejs') %>
</body>
</html>
